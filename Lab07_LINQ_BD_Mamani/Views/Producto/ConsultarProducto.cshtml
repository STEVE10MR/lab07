@using Lab07_LINQ_BD_Mamani.Models;
@model IEnumerable<Lab07_LINQ_BD_Mamani.Models.PRODUCTO>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Consultar productos</h2>
        <br />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                @using (Html.BeginForm("ConsultarProducto", "Producto", FormMethod.Post, new { @class = "form-inline" }))
                {
                    <div class="form-group row">
                        <div class="col-md-9">
                            @Html.TextBox("busqueda", null, new { @class = "form-control", @placeholder = "Buscar" })
                            <span id="advertencia" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <br>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID Producto</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IDPRODUCTO</td>
                        <td>@item.NOMBRE</td>
                        <td>@item.DESCRIPCION</td>
                        <td>@item.PRECIO</td>
                        <td>@item.STOCK</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
